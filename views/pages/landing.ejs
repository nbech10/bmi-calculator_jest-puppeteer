<% include ../partials/header %>

<div class="jumbotron">
    <h1 data-testid="landingPageTitle">BMI - Calculator</h1>
    <p>With this tool you can easily determine your BMI.</p>
</div>

<form method="GET" class="form-horizontal" action="/result">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Please enter your details!</h3>
        </div>
        <div class="panel-body">
            <div class="form-group">
                <label for="cm" class="col-sm-2 control-label">
                    You Height (cm)
                </label>
                <div class="col-sm-10">
                    <input name="cm" type="number" class="form-control" id="cm" />
                </div>
            </div>
            <div class="form-group">
                <label for="kg" class="col-sm-2 control-label">
                    You Weight (kg)
                </label>
                <div class="col-sm-10">
                    <input name="kg" type="number" class="form-control" id="kg" />
                </div>
            </div>
            <div class="form-group">
                <label for="gender" class="col-sm-2 control-label">
                    KÃ¸n (female/male)
                </label>
                <div class="col-sm-10">
                    <select name="gender" class="form-control" id="gender" data-testid="gender-selector">
                        <option value="choose">Choose</option>
                        <option value="female">Female</option>
                        <option value="male">Male</option>
                      </select>
                </div>
            </div>
            <div class="form-group">
                <label for="waist" class="col-sm-2 control-label">
                    Waist size (cm)
                </label>
                <div class="col-sm-10">
                    <input name="waist" type="number" class="form-control" id="waist" />
                </div>
            </div>
            <div class="form-group">
                <label for="hip" class="col-sm-2 control-label">
                    Hip size (cm)
                </label>
                <div class="col-sm-10">
                    <input name="hip" type="number" class="form-control" id="hip" />
                </div>
            </div>
        </div>
        <div class="panel-footer">
            <input type="submit" class="btn btn-primary" value="Send!" />
        </div>
    </div>
</form>

<% include ../partials/footer %>